<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/main_background_Layout"
    tools:context=".AppPassInputActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/up_background_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/selyen_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/lock_Image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_lock"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0.5">
        </ImageView>

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:text="설정하실 암호를 입력해주세요"
            android:gravity="center"
            android:textColor="#ffffff"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="2sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.045"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.48"
            app:layout_constraintHorizontal_bias="0.5"></TextView>

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_dot_default"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.35">
        </ImageView>

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_dot_default"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.45">
        </ImageView>

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_dot_default"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.55">
        </ImageView>

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_dot_default"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.65">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_background_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5">

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:layout_gravity="center"
                    android:text="1"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="2"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_3"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="3"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_4"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="4"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_5"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="5"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_6"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="6"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_7"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="7"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_8"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="8"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_9"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="9"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_empty"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="  "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_0"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="0"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
                <TextView
                    android:id="@+id/btn_remove"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:text="X"
                    android:clickable="true"
                    android:onClick="onClick_num_btn"
                    android:background="@drawable/ripple_transparent_full_bg"
                    android:gravity="center"
                    android:textColor="#90000000"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="2sp"
                    app:autoSizeStepGranularity="1sp">
                </TextView>
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>