<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container_bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_round_background"
    android:layout_width="match_parent"
    android:paddingHorizontal="35dp"
    android:paddingVertical="40dp"
    android:layout_height="600dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="공지 기한 설정"
        android:fontFamily="@font/nanumsquare_acr"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="공지 기한을 설정하면,\n설정 기한까지 공지가 상단에 노출됩니다."
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/sub_text_color"></TextView>

    <DatePicker
        android:id="@+id/dataPicker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_white_bg_round10"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:clickable="true">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text=""
            android:fontFamily="@font/nanumsquare_acr"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000000"></TextView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/set_date_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_custom_login_btn"
            android:text="설정"
            android:fontFamily="@font/nanumsquare_acr"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>