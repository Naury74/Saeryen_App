<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/main_background_Layout"
    tools:context=".ChangeEmailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_background_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.5">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_left_arrow_black"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="onClick_back"
                android:background="@drawable/ripple_transparent_background"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="변경할 이메일을 입력하고\n이메일 변경을 눌러주세요."
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|left"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="2sp"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_Layout"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"></TextView>

    <TextView
        android:id="@+id/email_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="･ 새 이메일"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center|left"
        android:textColor="#3d3d3d"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="0.1sp"
        app:autoSizeStepGranularity="0.1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_Layout"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintHorizontal_bias="0.5"></TextView>

    <EditText
        android:id="@+id/email_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="이메일 입력"
        android:fontFamily="@font/nanumsquare_acr"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="0.1sp"
        app:autoSizeStepGranularity="0.1sp"
        android:paddingHorizontal="20dp"
        android:textColorHint="#70000000"
        android:gravity="center|left"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/selector_round_stroke_focus_selyenskyblue"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_Layout"
        app:layout_constraintVertical_bias="0.22">
    </EditText>

    <TextView
        android:id="@+id/email_check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text=""
        android:gravity="center|right"
        android:textColor="#FF0000"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="0.1sp"
        app:autoSizeStepGranularity="0.1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.016"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_Layout"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintHorizontal_bias="0.5"></TextView>

    <TextView
        android:id="@+id/btn_request_change"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_btn_backgound_d6d6d6"
        android:text="이메일 변경"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center"
        android:textColor="#ffffff"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeMaxTextSize="25sp"
        app:autoSizeStepGranularity="1sp"
        android:clickable="false"
        android:onClick="Submit"
        android:padding="9dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_Layout"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>